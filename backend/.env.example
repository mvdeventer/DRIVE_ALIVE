# Database
DATABASE_URL=postgresql://user:password@localhost:5432/driving_school_db

# JWT Secret
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Encryption (for sensitive data like SMTP passwords)
# Generate with:
#   python -c "from app.utils.encryption import EncryptionService; print(EncryptionService.generate_key())"
ENCRYPTION_KEY=your-base64-encoded-fernet-key

# Firebase
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json

# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# PayFast (South Africa)
PAYFAST_MERCHANT_ID=your_merchant_id
PAYFAST_MERCHANT_KEY=your_merchant_key
PAYFAST_PASSPHRASE=your_passphrase
PAYFAST_MODE=sandbox

# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
# Note: Twilio sender phone number is now configured in admin settings during setup
# It is stored in the database (users.twilio_sender_phone_number) and used globally
# TWILIO_WHATSAPP_NUMBER is deprecated - use admin settings instead

# Frontend URL (CRITICAL: Update for each environment)
# Local Development: http://localhost:8081
# Home Network Testing: http://192.168.1.100:8081 (replace with your computer's IP)
# Production: https://your-app-name.onrender.com
FRONTEND_URL=http://localhost:8081

# App Settings
ENVIRONMENT=development
DEBUG=True
# Add all IPs/domains that will access the API (including your local IP for mobile testing)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://192.168.1.100:8081

# South Africa specific
DEFAULT_TIMEZONE=Africa/Johannesburg
DEFAULT_CURRENCY=ZAR
